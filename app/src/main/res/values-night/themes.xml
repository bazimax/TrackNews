<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark application theme. -->
    <style name="Theme.TrackNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/darkColorOnPrimary</item>
        <item name="textFillColor">@color/darkColorText</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkColorSecondary</item>
        <item name="colorSecondaryVariant">@color/darkColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/darkColorOnSecondary</item>

        <item name="backgroundColor">@color/darkColorBackground</item>
        <item name="background">@color/darkColorNewsItemBackground</item>

        <item name="windowActionBar">false</item> <!--скрыли тулбар 1 из 2-->
        <item name="windowNoTitle">true</item> <!--скрыли тулбар 2 из 2-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Дополнительные темы -->
    <style name="Theme.BackgroundPrimaryVariant" parent="Theme.TrackNews">
        <!--Для tabLayout-->
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.BackgroundPrimary" parent="Theme.TrackNews">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.BackgroundBase" parent="Theme.TrackNews">
        <!--Стандартный светлый фон для текста-->
        <item name="android:background">?attr/backgroundColor</item>
    </style>

    <style name="Theme.BackgroundSecondary" parent="Theme.TrackNews">
        <!--Для кнопок-->
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="Theme.BackgroundBaseButton" parent="Theme.TrackNews">
        <!--Для кнопок в newsItem-->
        <item name="colorPrimary">?attr/background</item>
    </style>

    <style name="Theme.BackgroundNewsItemDate" parent="Theme.TrackNews">
        <!--Для newsItem Date-->
        <item name="android:background">?attr/background</item>
        <item name="android:textColor">@color/darkColorTextDate</item>
    </style>

    <style name="Theme.BackgroundNewsItemText" parent="Theme.TrackNews">
        <!--Для newsItem Text-->
        <item name="android:background">?attr/background</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="BackgroundNewsItemTextLink">
        <!--Для newsItem Text > Link-->
        <item name="android:textColor">@color/darkColorTextLink</item>
    </style>

    <style name="BackgroundNewsItemTextTitle">
        <!--Для newsItem Text > Title-->
        <item name="android:textColor">@color/darkColorTextTitle</item>
    </style>

    <style name="BackgroundNewsItemTextContent">
        <!--Для newsItem Text > Content-->
        <item name="android:textColor">@color/darkColorTextContent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>
</resources>